{
  "private": true,
  "name": "quick-payments",
  "version": "0.0.0",
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "expo": "^28.0.0",
    "idx": "^2.4.0",
    "react": "16.3.1",
    "react-native": "https://github.com/expo/react-native/archive/sdk-28.0.0.tar.gz",
    "react-native-animatable": "^1.3.0"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.5",
    "babel-plugin-idx": "^2.4.0",
    "babel-plugin-relay": "^1.6.0",
    "eslint": "^5.1.0",
    "eslint-plugin-dependencies": "^2.4.0",
    "eslint-plugin-flowtype": "^2.50.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-react": "^7.10.0",
    "eslint-plugin-react-native": "^3.2.1",
    "flow-bin": "^0.76.0",
    "jest-expo": "^28.0.0",
    "prettier": "^1.13.7",
    "react-native-scripts": "1.14.0",
    "react-test-renderer": "16.3.1",
    "relay-compiler": "^1.6.0"
  },
  "main": "./packages/index.js",
  "scripts": {
    "start": "react-native-scripts start",
    "android": "react-native-scripts android",
    "ios": "react-native-scripts ios",
    "test": "node node_modules/jest/bin/jest.js --config=.jest.json",
    "test-ci": "sh ./scripts/test.sh",
    "lint": "eslint . --report-unused-disable-directives",
    "relay": "relay-compiler --src ./packages/scenes --schema ./packages/api/schema.graphql",
    "relay-cleanup": "find packages -name \"*.graphql.js\" -type f -delete && yarn relay",
    "prettier": "prettier --write \"{flow-typed,packages,scripts,__{tests,mocks}__}/**/*.js\" --single-quote"
  },
  "jest": {
    "preset": "jest-expo"
  }
}
