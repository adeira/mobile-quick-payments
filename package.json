{
  "private": true,
  "name": "quick-payments",
  "version": "0.0.0",
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "decimal.js-light": "^2.4.1",
    "expo": "^29.0.0",
    "idx": "^2.4.0",
    "react": "16.3.1",
    "react-native": "https://github.com/expo/react-native/archive/sdk-29.0.0.tar.gz",
    "react-native-animatable": "^1.3.0"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.6",
    "babel-plugin-idx": "^2.4.0",
    "eslint": "^5.4.0",
    "eslint-plugin-babel": "^5.1.0",
    "eslint-plugin-dependencies": "^2.4.0",
    "eslint-plugin-flowtype": "^2.50.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jasmine": "^2.10.1",
    "eslint-plugin-prefer-object-spread": "^1.2.1",
    "eslint-plugin-react": "^7.11.1",
    "eslint-plugin-react-native": "^3.2.1",
    "eslint-plugin-relay": "^0.0.27",
    "flow-bin": "^0.79.1",
    "jest-expo": "^29.0.0",
    "prettier": "^1.14.2",
    "react-native-scripts": "1.14.0",
    "react-test-renderer": "16.3.1"
  },
  "main": "./packages/index.js",
  "scripts": {
    "start": "react-native-scripts start",
    "android": "react-native-scripts android",
    "ios": "react-native-scripts ios",
    "test": "node node_modules/jest/bin/jest.js --config=.jest.json",
    "test-ci": "sh ./scripts/test.sh",
    "lint": "eslint . --report-unused-disable-directives",
    "relay": "relay-compiler --src ./packages --schema ./packages/api/schema.graphql --verbose",
    "relay-cleanup": "find packages -name \"*.graphql.js\" -type f -delete && yarn relay",
    "prettier": "prettier --write \"{flow-typed,packages,scripts,__{tests,mocks}__}/**/*.js\" --config ./.prettierrc.js"
  },
  "jest": {
    "preset": "jest-expo"
  }
}
